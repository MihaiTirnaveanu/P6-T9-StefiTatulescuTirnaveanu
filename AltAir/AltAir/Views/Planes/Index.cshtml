@model IEnumerable<AltAir.Models.Plane>
@using Microsoft.AspNetCore.Identity
@using System.Security.Claims;

@{
    ViewData["Title"] = "Index";
}

<h1>AltAir Planes</h1>
@if (User.Identity.IsAuthenticated)
{
    var roleClaim = User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role);
    if (roleClaim != null && roleClaim.Value == "Administrator")
    {
        <p>
            <a asp-action="Create">Create New</a>
        </p>
    }
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manufacture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NoSeats)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manufacture)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoSeats)
            </td>
            <td>
                    @if (User.Identity.IsAuthenticated)
                    {
                        var roleClaim = User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role);
                        if (roleClaim != null && roleClaim.Value == "Administrator")
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        }
                    }
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>     
            </td>
        </tr>
}
    </tbody>
</table>
